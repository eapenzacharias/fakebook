<ul class="users">
  <li><%= @users.name %></li>
  <li><%= @users.email %></li>
  <li><%= @users.created_at %></li>
</ul>
<div class='col-md-7'>
    <h3><%= "#{@users.name.capitalize}'s" %> Friends</h3>
    <ul>
    <%@friendships = Friendship.where(user_id: @users.id, confirmed: true)%>
      <% @friendships.each do |user| %>
      <% x = User.find_by(id: user.friend_id)%>
        <li>
          <p><strong><%= "#{x.name}" %> </strong><%="#{x.email}" %> </p>
          <p><%= link_to 'Profile', user_path(x.id) %></p>
        </li>
      <% end %>
    </ul>
  </div>
<div class='col-md-5'>
    <h3>Mutual Friends</h3>
    <%@mutual_friendships = Friendship.where(user_id: current_user, confirmed: true, friend_id: (Friendship.where(user_id: @users.id, confirmed: true).select('friend_id'))) %>
    <%if @mutual_friendships%>
      <ul>
        <% @mutual_friendships.each do |user| %>
          <li>
          <% x = User.find_by(id: user.friend_id)%>
            <p>
              <%= link_to "#{x.name}", user_path(x.id) %> 
              <%= x.email %>
            </p>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>You don't have Mutual Friends</p>
    <% end %>
  </div>