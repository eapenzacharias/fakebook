<div class="newpost container">
  <%= form_for(@new_post, :html => {:class => "form-inline"}, as: :post, url: posts_path) do |f| %>
  <%= f.text_field :content, placeholder: "What are your thinking about #{current_user.name}?", class: "form-control col-9" %>
  <%= f.submit "Post", class: "btn btn-primary col-2" %>
<% end %>
</div>