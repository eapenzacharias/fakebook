<li id="post-<%= post.id %>" class='container post' >
  <div class='post_info d-flex flex-row'>
    <%= image_tag post.author.profile_picture.thumb.url %>
    <div class='author_timestamp d-flex flex-column mr-auto'>
      <%= link_to post.author.name, post.author %>
      <%= post.formatted_timestamp %>
    </div>
      <% if post.user == current_user %>
        <div class="col-1 my-auto">
          <%= link_to "Edit", edit_post_path(post), class: "btn btn-warning btn-xs" %>
        </div>
        <div class="col-1 my-auto">
          <%= link_to "Delete", post_path(post), class: "btn btn-danger btn-xs", method: :delete, action: :destroy %>
        </div>
      <% end %>
      <% if post.created_at != post.updated_at %>
        <div class="col-3 my-auto">
          <%= post.updated_at.strftime("Updated at: %d/%m/%Y") %>
        </div>
        <div class="col-3 my-auto">
          <%= post.created_at.strftime("Posted at: %d/%m/%Y") %>
        </div>
      <% end %>
    </div>
    <div class="row post-content">
    <h5>
      <%= post.content %>
    <h5>
    <%= link_to like_post_path(post), class: "like", method: :put do %>
      <button type="button" class="btn btn-primary">
        <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
        <span class="badge"><%= post.get_upvotes.size %></span>
      </button>
    <% end %>
    <%= link_to dislike_post_path(post), class: "like", method: :put do %>
      <button type="button" class="btn btn-primary">
        <span class="glyphicon glyphicon-thumbs-down glyphicon-align-center" aria-hidden="true"></span>
        <span class="badge"><%= post.get_downvotes.size %></span>
      </button>
    <% end %>
    </div>
  </div>
</li>