<div class='row friends'>
  <div class='col-md-7'>
    <h3><%= "#{current_user.name.capitalize}'s" %> Friends</h3>
    <ul>
      <% @friendships.each do |user| %>
        <li>
          <p><strong><%= "#{user.name.capitalize}" %> </strong><%="#{user.email}" %> </p>
          <p><%= link_to 'Profile', user_path(user) %></p>
        </li>
      <% end %>
    </ul>
  </div>
  <div class='col-md-5'>
    <h3>Friend Requests</h3>
    <% if true %>
      <ul>
        <% @pending_friendships.each do |user| %>
          <li>
            <p>
              <%= link_to "#{user}", user_path(user) %> 
              <%= user.name %>
            </p>
            <p>
              <%= button_to "Confirm Friendship", friendships_path(user)%>
              <%#= button_to "Accept", { action: "update", controller: 'friendships' }, params:{ friend_id: update.id }, class: "accept" %>
              <%#= button_to "Decline", friend_request_path(friend_request), method: :delete,remote: true,class: "decline"%>
            </p>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>You don't have Friend Requests</p>
    <% end %>
  </div>
</div>
